//- Bootstrap Card
	@param {object}  obj           - card object
	@param {boolean} obj.show      - is card not collapsed
	@param {string}  obj.parentId  - parent accordion id
	@param {string}  obj.title     - card title
mixin card( obj )
	-
		var
			headId = obj.parentId +'-card-head-'+ randomStr(8),
			bodyId = obj.parentId +'-card-body-'+ randomStr(8);

	//Bootstrap card
	article.card.card-custom&attributes( attributes )
		.card-header( role='tab' )
			.card-title
				a( id= headId, data-bs-toggle='collapse', data-bs-parent='#'+ obj.parentId, href='#'+ bodyId, aria-controls= bodyId, aria-expanded= Boolean( obj.show ).toString(), class={ collapsed: !obj.show }, role='button', )
					= obj.title

		.collapse( id= bodyId, aria-labelledby= headId, data-bs-parent='#'+ obj.parentId, class={ show: obj.show }, role='tabpanel' )
			.card-body
				block
